<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Add Ingredients"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_vegetable"
        android:layout_width="188dp"
        android:layout_height="122dp"
        android:text="Vegetable"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#CAFAD0"/>

    <Button
        android:id="@+id/btn_fruit"
        android:text="Fruit"
        android:layout_width="188dp"
        android:layout_height="122dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FCBF88"/>

    <Button
        android:id="@+id/btn_meat"
        android:layout_width="188dp"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="185dp"
        android:text="Meat"
        android:backgroundTint="#D9759A"/>

    <Button
        android:id="@+id/btn_seafood"
        android:layout_width="188dp"
        android:layout_height="122dp"
        android:text="Seafood"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="185dp"
        android:backgroundTint="#75C3D9"/>

    <Button
        android:id="@+id/btn_refrigerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "My refrigerator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:backgroundTint="#A88DF0"
        />

    <LinearLayout
        android:id="@+id/plusLayout_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity = "bottom|end"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/plusFab_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_help"
            app:backgroundTint="@color/softGray"
            app:elevation="0dp"/>
    </LinearLayout>



</RelativeLayout>
